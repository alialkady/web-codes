          <script>
        var bg;
        function showmsg (text id = "message") {
            var L = (document.body.clientwidth - 300)/2 ;
            window.page.style.opacity = 0.2 ;
            window.page.style.backgroundColor = bg;
            bg = document.body.style.backgroundColor = "aaa";
            window.page.style.zIndex = 0 ;
            var strmsg = "" ;
            strmsg += "<div id = 'page'> </div>" + text + "<br><br>" +
                "<Button>OK </Button"  ;
            window.mas.innerHTML = strmsg;
                window.msg.style.left = L;
            
            
            
            
        }
        
        
        
